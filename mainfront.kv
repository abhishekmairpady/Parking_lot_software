WindowManager:
    Container:
        name: "login"

#MAIN PAGE
#-----------------------------------------------------------------------------------------
<Container>:
    BoxLayout:
        orientation:'vertical'

        #Header
        #--------------------------------------------------------------
        Label:
            
        
            height:'20dp'
            size_hint_y:None
            text: 'PARKING LOT'
            bold: True
            font_size: 30
            size_hint:(1,0.15)
            pos_hint:{'center_x':0.5, 'center_y':0.5 }
            canvas.before:
                Color:
                    rgba: 0.25,0.5,0.8,0.8
                Rectangle:
                    # self here refers to the widget i.e FloatLayout
                    pos: self.pos
                    size:self.size

        BoxLayout:
            BoxLayout:
                Button: 
                    text: 'Home'
                    background_normal:''
                    background_color:[0.25,0.5,0.8,0.9]
                    on_press: 


            #Scroll view strat
            #---------------------------------------------------------------------
            ScrollView:
                size_hint:(1, None)
                size:(0, 450)
                bar_width: 5
                BoxLayout:
                    padding:[140,0,140,0]
                    orientation:'vertical'
                    size_hint: 1,None
                    height: self.minimum_height
                
            
                    #Selectig vehicleno
                    #------------------------------------------------------
                    BoxLayout:
                        height:'80dp'
                        size_hint_y:None
                        padding:20
                        spacing:20

                        Label:
                        
                            text:'Vehicle No'
                            font_size: 20
                            size_hint_x:1
                            
                        TextInput:
                            id: vehicleno
                            text:''
                            font_size: 20
                            size_hint_x:2
                            

                    #Selecting fourwheeler
                    #------------------------------------------------------------------------------------------------

                    BoxLayout:
                        height:'80dp'
                        size_hint_y:None
                        padding:20
                        spacing:20

                        Label:
                        
                            text:'Four Wheeler'
                            font_size: 20
                            size_hint_x:1
                            
                        Spinner:
                            size_hint_x:2
                            id: fourwheeler
                            text: "Choose "                   
                            values: ["Yes","No"]       
                            on_text:
                                print(self.text)
                                

                    #Selecting valetparking
                    #------------------------------------------------------------------------------------------------

                    BoxLayout:
                        height:'80dp'
                        size_hint_y:None
                        padding:20
                        spacing:20

                        Label:
                        
                            text:'Valet Parking'
                            font_size: 20
                            size_hint_x:1
                            
                        Spinner:
                            size_hint_x:2
                            text: "Choose "                   
                            values: ["Yes","No"]   
                            id: valetparking    
                            on_text:
                                print(self.text)
                                

                    #Selectig lotno
                    #------------------------------------------------------
                    BoxLayout:
                        height:'80dp'
                        size_hint_y:None
                        padding:20
                        spacing:20

                        Label:
                        
                            text:'Lot No'
                            font_size: 20
                            size_hint_x:1
                            
                        TextInput:
                            id: lotno
                            text:''
                            font_size: 20
                            size_hint_x:2
                            
            #-----------------------------------------------------------------------
            #Scroll view end
            #-----------------------------------------------------------------------

        #Footer
        #--------------------------------------------------------------------------------
        BoxLayout:
            height:'80dp'
            size_hint_y:None
            padding:[100,20,100,20]
            spacing:20
            Button: 
                text: 'Home'
                background_normal:''
                background_color:[0.25,0.5,0.8,0.9]
                on_press: root.manager.current = 'login'
            Button:
                text: 'SUBMIT'
                background_normal:''
                background_color:[0.25,0.5,0.8,0.9]
                on_press:
                    root.entertableinfo(vehicleno.text,fourwheeler.text,valetparking.text,lotno.text) 
                    #root.manager.current = 'resultpage'